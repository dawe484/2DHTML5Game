<div>
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-10">
      {{!-- Breadcrumbs --}}
      <div class="breadcrumbs">
        <h2>Sign Up</h2>
        <ol class="breadcrumb">
          <li>
            <a href="/" class="breadcrumbs-a">Home</a>
          </li>
          <li>Sign Up</li>
        </ol>
      </div>
      {{!-- End Breadcrumbs --}}
    </div>
    <div class="col-xs-1">
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-10">
      <div class="jumbotron">
        <div class="row">
          <div class="col-xs-1">
          </div>
          <div class="col-xs-10">
            <div class="account">
              <h3>Sign Up</h3>

              {{#if errors}}
                {{#each errors}}
                  <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
              {{/if}}

              <div class="well clearfix">
                <div class="col-md-5">
                  <dl class="social-login">
                    <dt>Sign Up quickly:</dt>
                    <dd>
                      <a href="" class="btn btn-block btn-social btn-facebook">
      									<span class="fa fa-facebook"></span>Sign in with Facebook
      								</a>
      								<a href="" class="btn btn-block btn-social btn-google">
      							    <span class="fa fa-google-plus"></span>Sign in with Google+
      							  </a>
      								<a href="" class="btn btn-block btn-social btn-twitter">
      							    <span class="fa fa-twitter"></span>Sign in with Twitter
      							  </a>
                    </dd>
                  </dl>
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-5">
                  <form method="post" action="/users/signup">
                    <dl class="account-login">
                      <dt>Create a Magical Heroes Account:</dt>
                      <dd>
                        <div class="input-group margin-bottom-sm">
      									  <span class="input-group-addon"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
      										<input type="text" class="form-control" name="username" placeholder="Username">
      									</div>
                      </dd>
                      <dd>
                        <div class="input-group">
      									  <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
      										<input type="password" class="form-control" name="password" placeholder="Password">
      									</div>
                      </dd>
                      <dd>
                        <div class="input-group">
      									  <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
      										<input type="password" class="form-control" name="password2" placeholder="Comfirm Password">
      									</div>
                      </dd>
                      <dd>
                        <div class="input-group">
      									  <span class="input-group-addon"><i class="fa fa-envelope fa-fw" aria-hidden="true"></i></span>
      										<input type="email" class="form-control" name="email" placeholder="Email">
      									</div>
                      </dd>
                      <dd class="handle">
                        <div class="squaredThree signup-squaredThree">
          								<input type="checkbox" name="optionsRadios" id="checkOther" value="other" ng-model="formData.other"
          								ng-true-value="'other'" ng-init="formData.other='other'" checked="">
          								<label for="checkOther"></label>
          							</div>
                        <label class="label-checkbox-black">
          					    	Sign Up for Magical Heroes exclusive <br> news!
          					    </label>
                      </dd>
                      <dd class="handle">
                        <div class="squaredThree signup-squaredThree">
          								<input type="checkbox" name="optionsRadios" id="checkTerm" value="term" ng-model="formData.term"
          								ng-true-value="'term'" ng-init="formData.term='term'" checked="">
          								<label for="checkTerm"></label>
          							</div>
                        <label class="label-checkbox-black">
          					    	I have read and agree to the
          					    </label>
                        <p>
                          <a href="">Term of Service</a> & <a href="">Privacy Policy</a>
                        </p>
                      </dd>
                      <dd>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                      </dd>
                    </dl>
                  </form>
                </div>
              </div>
              {{!-- End div class"well clearfix" --}}
              <div class="grayscale clearfix">
                "Already have an account?"
                <a href="/users/login">Log in here!</a>
              </div>
            </div>
          </div>
          <div class="col-xs-1">
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-1">
    </div>
  </div>

</div>
